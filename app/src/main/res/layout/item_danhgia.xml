<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/hienthidanhgia"
    android:padding="8dp">

    <!-- Đường ngang chứa ảnh đại diện, tên tài khoản và nút biểu tượng -->

    <!-- Dòng bình luận -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Ảnh đại diện -->
        <ImageView
            android:id="@+id/imageusername"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/custom_biatruyen"
            android:src="@drawable/anyatoon" />

        <!-- Tên tài khoản và đánh giá sao -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <!-- Tên tài khoản và nút biểu tượng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Tên tài khoản"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Nút biểu tượng -->
                <ImageView
                    android:id="@+id/image_menubl_danhgia"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_gravity="start"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:src="@drawable/anhbachamden" />
            </LinearLayout>

            <!-- Đánh giá sao và văn bản đánh giá -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rating_description"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="5"
                    android:scaleX="0.7"
                    android:scaleY="0.7" />

                <TextView
                    android:id="@+id/review_rating_bar"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="Rất tốt"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dòng bình luận"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="8dp" />
</LinearLayout>
